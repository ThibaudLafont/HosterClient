{% extends 'base.html.twig' %}

{% block body %}
    {% form_theme form 'form_table_layout.html.twig' %}
    {{ form(form) }}
    <section id="uploaded">
        <img src="/img/default.jpg" alt="" class="ui loader" style="width: 250px;">
    </section>
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
    <script>
        $('#uploaded img').hide(0);

        $('button').click(function (e) {
            e.preventDefault();
            var data;

            data = new FormData();
            data.append('image_upload[name]', $('#image_upload_name').val());
            data.append('image_upload[alt]', $('#image_upload_alt').val());
            data.append('image_upload[image]', $('#image_upload_image').prop('files')[0] );
            data.append('image_upload[_token]', $('#image_upload_token').val());

            $.ajax({
                method: "POST",
                url: "http://hoster.lan/ajax-upload",
                data: data,
                processData: false,
                contentType: false,
                success: function(text) {
                    $('#uploaded img').show();
                    $('#uploaded img').attr('src', 'http://hoster.lan' + text['url'])
                }
            });
        })
    </script>
{% endblock %}
